{
  "manifest_version": 3,
  "name": "GPT Session Switcher",
  "version": "2.0.0",
  "description": "多账号 ChatGPT sessionToken 快速切换工具",
  "icons": {
    "16": "icons/Logo.png",
    "48": "icons/Logo.png",
    "128": "icons/Logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Switch GPT Account",
    "default_icon": "icons/Logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "cookies",
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*.chatgpt.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'"
  }
}